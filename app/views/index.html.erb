<!doctype html>
<html lang="en" ng-app="PSAScholarships">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Scholarships presented by the William and Mary Peer Scholarsip Advisors">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.7.3/css/bootstrap-select.min.css"></link>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.7.3/js/bootstrap-select.min.js"></script>
    <title>PSA Scholarships</title>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>

  </head>
  <body ng-controller="ScholarshipsController" ng-class="page">

    <div class="header-divider"></div>

    <div class="container">
      <div class="row">
        <div class="col-xs-2 hidden-sm hidden-xs psa-logo"><%= image_tag("psas.jpg", alt: "Peer Scholarship Advisors Logo", width: "100%", class: "") %></div>
        <div class="col-xs-12 col-sm-12 col-md-8">
          <h1 class="title text-center">Scholarship Master List</h1>
          <h4 class="sub-title text-center">Presented by the William and Mary Peer Scholarship Advisors</h4>
        </div>
        <div class="col-xs-2 hidden-sm hidden-xs wm-logo"><%= image_tag("wm.png", alt: "Peer Scholarship Advisors Logo", width: "100%", class: "") %></div>
      </div>
    </div>
    <div class="header"></div>
    <div class="header-divider header-divider-bottom"></div>

    <div class="container">
      <div class="row">
        <div class="col-xs-1"></div>
        <div class="col-xs-10">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Search for scholarships" ng-model="search">
            <span class="input-group-btn">
              <button class="btn" type="button" ng-click="toggleSearchType()">{{searchType}} Search</button>
            </span>
          </div>
        </div>
        <div class="col-xs-1"></div>
      </div>
    </div>

    <div ng-show="searchType === 'Basic'">
      <div class="container">
        <div class="row first-row">
          <div class="col-sm-3">
            <h5>Academic Status</h5>
            <select class="selectpicker" title="Any" multiple>
              <option>Freshman</option>
              <option>Sophomore</option>
              <option>Junior</option>
              <option>Senior</option>
              <option>Grad Student</option>
              <option>Alumni</option>
            </select>
          </div>
          <div class="col-sm-3">
            <h5>Area of Study</h5>
            <select class="selectpicker" title="Any" multiple>
              <option>Sciences</option>
              <option>Social Sciences</option>
              <option>Humanities</option>
              <option>Education</option>
              <option>Math and Technology</option>
              <option>Health Disciplines</option>
              <option>Law</option>
              <option>Fine and Performing Arts</option>
            </select>
          </div>
          <div class="col-sm-3">
            <h5>Scholarship Purpose</h5>
            <select class="selectpicker" title="Any" multiple>
              <option>Graduate/PostGrad Study</option>
              <option>International Study, Research or Internships</option>
              <option>Public Service</option>
              <option>Undergraduate Tuition</option>
              <option>Job Placement/Funding</option>
              <option>Language</option>
            </select>
          </div>
          <div class="col-sm-3">
            <h5>World Region</h5>
            <select class="selectpicker" title="Any" multiple>
              <option>Europe/Australia</option>
              <option>United States</option>
              <option>Americas (not U.S.)</option>
              <option>Africa</option>
              <option>Asia</option>
            </select>
          </div>
        </div>
      </div>

      <div class="container">
        <div class="row second-row">
          <div class="col-sm-3">
            <h5>Scholarship Duration</h5>
            <select class="selectpicker" title="Any" multiple>
              <option>Spring</option>
              <option>Summer</option>
              <option>Fall</option>
            </select>
          </div>
          <div class="col-sm-3">
            <h5>Gender</h5>
            <select class="selectpicker" title="Any" multiple>
              <option>Male</option>
              <option>Female</option>
            </select>
          </div>
          <div class="col-sm-3">
            <h5>US Citizenship</h5>
            <select class="selectpicker">
              <option>Either</option>
              <option>Required</option>
              <option>Not Required</option>
            </select>
          </div>
          <div class="col-sm-3">
            <h5>Financial Need</h5>
            <select class="selectpicker">
              <option>Either</option>
              <option>Is required</option>
              <option>Is not required</option>
            </select>
          </div>
        </div>
      </div>
    </div>

    <div class="container">
      <table class="table table-striped master-list">
        <thead>
          <tr>
            <th><h3>Scholarship Title</h3></th>
            <th style="white-space: nowrap;">External Link</th>
          </tr>
        </thead>
        <tbody>
          <tr class="scholarship" ng-repeat-start="scholarship in scholarships | fuzzyBy: 'title': search" ng-click="scholarship['expand'] = !scholarship['expand']">
            <td>{{scholarship.title}}</td>
            <td><a target="_blank" ng-href="{{scholarship.link}}" ng-show="scholarship.link">more info</a></td>
          </tr>
          <tr ng-repeat-end ng-show="scholarship['expand']">
            <td class="expansion" colspan="42">
              <b>Desription:</b><br>
              {{scholarship["Description"]}}
            </td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="footer-divider"></div>
    <div class="footer"></div>

  </body>
</html>
